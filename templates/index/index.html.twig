{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des produits</h1>
    <table class="table">
        <tr>
            <th>Numéro du produit</th>
            <th>Désignation du produit</th>
            <th>Prix</th>
            <th>Disponibilité</th>
            <th>Suppression</th>
            <th>Modification</th>
            <th>Détail</th>
        </tr>
        {% for produits in produits %}
            <tr>
                <td>{{ produits.id }}</td>
                <td>{{ produits.designation }}</td>
                <td>{{ produits.prix }}</td>
                <td>{{ produits.stock }}</td>
                <td><a href="/delete/{{ produits.id }}"><button type="button" class="btn btn-primary">Supprimer</button></a></td>
                <td><a href="/update/{{ produits.id }}"><button type="button" class="btn btn-primary">Modifier</button></a></td>
                <td><a href="/detail/{{ produits.id }}"><button type="button" class="btn btn-primary">Détail</button></a></td>
            </tr>
        {% endfor %}

    </table>
    <a href="/create"><button type="button" class="btn btn-primary">Créer un produit</button></a>
{% endblock %}
